<div class="search">
    <%= form_tag(root_path, method: :get) do %>
        <%= search_field_tag :looking_for, nil, placeholder: 'Movie Title...' , :size => "40*40" %>
        <%= submit_tag 'search' %>
    <% end %>
</div>
<div class="movies-container">
  <% @movies.each do |movie| %> <!-- 配列をループする -->
    <div class="movie-data">
      <p><%= movie['title'] %></p>
      <%= link_to post_path(movie['id']) do %>
        <% if movie['poster_path'] %>
          <%= image_tag 'https://image.tmdb.org/t/p/w200' + movie['poster_path'], class: "card-img" %>
        <% end %>
      <% end %>
      <p><%= link_to "詳細へ", post_path(movie['id']) %></p>
    </div>
  <% end %>
</div>



