<div class="container">
  <h1>ユーザー一覧</h1>
  <% if @users.any? %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>アバター</th>
          <th>名前</th>
          <th>Email</th>
          <th>登録日</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar.variant(resize_to_fill: [50, 50]), class: "rounded-circle" %>
              <% else %>
                <%= image_tag "top.jpg", class: "rounded-circle", size: "50x50" %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>ユーザーがまだ登録されていません。</p>
  <% end %>
</div>
