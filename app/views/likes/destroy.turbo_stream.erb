<%= turbo_stream.replace "like-button-#{@post.id}" do %>
  <div class="like-button">
    <!-- いいねボタン -->
    <%= link_to post_likes_path(post_id: @post.id), 
                method: :post, 
                remote: true, 
                class: "like-btn like" do %>
      <i class="fa fa-heart"></i>
    <% end %>
    
    <!-- いいね数 -->
    <span class="like-count"><%= @post.likes.count %></span>
  </div>
<% end %>
