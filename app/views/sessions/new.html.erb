<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="text-center mb-4">ログイン</h1>
      <%= form_with url: login_path, class: "login-form d-flex flex-column" do |f| %>
        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, class: "form-control form-control-lg login-email w-100" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, class: "form-control form-control-lg login-password w-100" %>
        </div>
        <div class="d-grid">
          <%= f.submit "ログイン", class: "btn btn-primary btn-login" %>
        </div>
      <% end %>
      <div class="text-center mt-3 login-links">
        <%= link_to '登録ページへ', new_user_path, class: "text-decoration-none me-3 register-link" %>
        <%= link_to 'パスワードをお忘れの方はこちら', '#', class: "text-decoration-none password-link" %>
      </div>
    </div>
  </div>
</div>
